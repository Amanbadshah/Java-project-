package com.pro.daolmpl;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import com.pro.dao.EmployeeDao;
import com.pro.pojo.Employee;
import com.pro.utility.Dbconnection;

public class EmployeeDaoImpL implements EmployeeDao {
	Connection con;
	PreparedStatement ps;
	
	@Override
	public void create(Employee e) {
		// TODO Auto-generated method stub
		Connection con = Dbconnection.getConnection();
		
		String query="insert into Employee(name,salary,address) values(?,?,?)";
		try {
		ps	= con.prepareStatement(query);
		ps.setString(1, e.getName());
		ps.setDouble(2,  e.getSalary());
		ps.setString(3, e.getAddress());
		ps.executeUpdate();
		con.close();
		
		
		
		
		} catch (SQLException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
		}
		
	public void fetch(Employee e1) {
		Connection con1 = Dbconnection.getConnection();
	String qu="select * from employee";
	try {
		ps=con1.prepareStatement(qu);
		ResultSet st = ps.executeQuery();
		while(st.next()) {
			e1.setEid(st.getInt(1));
			e1.setName(st.getString(2));
			e1.setSalary(st.getDouble(3));
			e1.setAddress(st.getString(4));						
		}
		
		
		
		
	} catch (SQLException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	
	
	}
}
